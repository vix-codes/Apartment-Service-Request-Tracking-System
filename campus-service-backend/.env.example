# Environment Configuration
NODE_ENV=development

# MongoDB
MONGO_URI=mongodb://localhost:27017/campusdb
# Common alternatives (some hosts/providers use these names):
# MONGODB_URI=...
# MONGO_URL=...
# DATABASE_URL=...

# Server
PORT=5000

# Optional: bootstrap a first admin user (use only for initial deployment, then set SEED_ADMIN=false)
# SEED_ADMIN=true
# ADMIN_EMAIL=admin@gmail.com
# ADMIN_PASSWORD=change_me
# ADMIN_NAME=Main Admin

# JWT
JWT_SECRET=your_jwt_secret_key_here_change_in_prod
JWT_EXPIRES=7d

# Rate Limiting (per minute)
RATE_LIMIT_MAX=100

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=info
